{
"name": "Custom Video BG",
"class": "videoBackground",
"max_blocks": 1,
"settings": [
	{
	"type": "text",
	"id": "custom_css",
	"label": "Add your Css here:"
	},
	{
		"type": "liquid",
		"id": "trust_ribbon",
		"label": "Put your global text here: "
	}
],
"blocks": [
		{
		"type": "video",
		"name": "Video",
		"settings": [
			{
			"type": "select",
			"id": "video_type",
			"label": "Tipo de video",
			"default": "local",
			"options": [
					{
					"value": "local",
					"label": "Video local"
					},
					{
					"value": "youtube",
					"label": "Video de YouTube"
					}
				]
			},
			{
				"type": "url",
				"id": "video_link",
				"label": "Video link"
			},
			{
				"type": "url",
				"id": "video_link_mobile",
				"visible_if": "{{ settings.video_type == 'local' }}",
				"label": "Video link on mobile"
			},
			{
			"type": "checkbox",
			"id": "video_muted",
			"label": "Silenciar video",
			"default": true
			},
			{
			"type": "checkbox",
			"id": "youtube_controls",
			"label": "Mostrar controles de YouTube",
			"default": false
			},
			{
				"type": "image_picker",
				"id": "video_image",
				"label": "Cover image"
			},
			{
			"type": "color",
			"id": "overlay_color",
			"label": "Overlay color",
			"default": "#000000"
			},
			{
			"type": "range",
			"id": "overlay_opacity_extra",
			"label": "Overlay extra opacity",
			"min": 0,
			"max": 100,
			"step": 1,
			"unit": "%",
			"default": 30
			},
			{
				"type": "header",
				"content": "Text",
			},
			{
				"type": "liquid",
				"id": "title",
				"label": "Heading",
				"default": "Video slide"
			},
			{
				"type": "richtext",
				"id": "text",
				"label": "Description",
				"default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
			},
			{
				"type": "color",
				"id": "color_text",
				"label": "Text color",
				"default": "#ffffff"
			},
			{
				"type": "text",
				"id": "button_label",
				"label": "Button label",
			},
			{
				"type": "url",
				"id": "button_link",
				"label": "Button link"
			},
			{
				"type": "color",
				"id": "color_btn_bg",
				"label": "Background button color",
				"default": "#ffffff"
			},
			{
				"type": "color",
				"id": "color_btn_text",
				"label": "Second Button text color",
				"default": "#ffffff"
			},
			{
				"type": "text",
				"id": "button_label_2",
				"label": "Second Button label",
			},
			{
				"type": "url",
				"id": "button_link_2",
				"label": "Second Button link"
			},
			{
				"type": "color",
				"id": "color_btn_bg_2",
				"label": "Second Background button color",
				"default": "#ffffff"
			},
			{
				"type": "color",
				"id": "color_btn_text_2",
				"label": "Second Button text color",
				"default": "#ffffff"
			}
		]
		},
		{
		"type": "image",
		"name": "Image",
		"settings": [
			{
				"type": "color",
				"id": "color_bg",
				"label": "Background color (optional)",
				"default": "#16165b"
			},
			{
				"type": "image_picker",
				"id": "image_bg",
				"label": "or use an image (required)",
			},
			{
				"type": "range",
				"id": "overlay_opacity",
				"label": "Overlay opacity for image",
				"min": 0,
				"max": 99,
				"step": 1,
				"unit": "%",
				"default": 0
			},
			{
				"type": "header",
				"content": "Text",
			},
			{
				"type": "text",
				"id": "title",
				"default": "Image slide",
				"label": "Heading"
			},
			{
				"type": "richtext",
				"id": "text",
